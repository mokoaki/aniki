<!DOCTYPE html>
<html>
<head>
  <title>アニキシステム</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <div class="waku">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="waku">
    <%= flash[:error] %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
